<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_4_size"
    android:padding="@dimen/_8_size"
    android:background="@color/purple">

    <TextView
        android:id="@+id/item_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_createdAt"
        android:textColor="@color/dark_white"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="@dimen/_22_size"/>

    <TextView
        android:id="@+id/item_description"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_4_size"
        android:text="Description"
        android:textSize="@dimen/_16_size"
        android:maxLines="1"
        android:textColor="@color/dark_white"
        app:layout_constraintTop_toBottomOf="@id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_createdAt"
        android:text="0:00"
        android:textSize="@dimen/_12_size"
        android:layout_width="wrap_content"
        android:layout_marginEnd="@dimen/_12_size"
        android:textColor="@color/dark_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>